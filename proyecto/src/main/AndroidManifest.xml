<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.cibertec.proyecto">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ClienteConsultaActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ClienteEditarActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ClienteMapaActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ClienteNuevoActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".PrincipalClienteActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".PrincipalProductoActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".PrincipalPedidoActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ProductoConsultaActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ProductoEditarActivity"
            android:configChanges="keyboardHidden"/>

        <activity android:name=".ProductoNuevoActivity"
            android:configChanges="keyboardHidden"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />

    </application>

</manifest>